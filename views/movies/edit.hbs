<h2>UPDATE MOVIE</h2>
<form  action="/movies/{{toEdit}}/edit" method="POST">
    <label>
    Title:
    <input type="text" name="title" value="{{toEdit.title}}">
  </label>
  <label>
    Genre:
    <input type="text" name="genre" value="{{toEdit.genre}}">
  </label>
  <label>
    Plot:
    <input type="text" name="plot" value="{{toEdit.plot}}">
  </label>
  Cast:
    <select name="cast" multiple>
      {{#each celebFromDb}}
        <option value="{{id}}" {{#if selected}}selected="selected"{{/if}}>{{name}}</option>
      {{/each}}
    </select>
  <button>Update Movie</button>
</form>